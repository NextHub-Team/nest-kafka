# Kafka broker & identity
KAFKA_BROKER=
KAFKA_CLIENT_ID=
KAFKA_GROUP_ID=

# Topics mapping
KAFKA_TOPICS=

# Security
KAFKA_ENABLE_SSL=true
KAFKA_SSL_CA_FILE=
KAFKA_SSL_CERT_FILE=
KAFKA_SSL_KEY_FILE=
KAFKA_SSL_CHECK_HOSTNAME=false

# SASL Authentication (Optional, only if using SASL)
KAFKA_SECURITY_PROTOCOL=
KAFKA_SASL_MECHANISM=
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# Consumption behavior
KAFKA_ENABLE_AUTO_COMMIT=false
KAFKA_AUTO_COMMIT_INTERVAL_MS=5000
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_SUBSCRIBE_FROM_BEGINNING=true
KAFKA_HEARTBEAT_INTERVAL_MS=5000
KAFKA_SESSION_TIMEOUT_MS=45000
KAFKA_ALLOW_AUTO_TOPIC_CREATION=false

# Consumer tuning
KAFKA_FETCH_MIN_BYTES=1
KAFKA_FETCH_MAX_BYTES=1048576
KAFKA_FETCH_WAIT_MAX_MS=500
KAFKA_MAX_PARTITION_FETCH_BYTES=1048576
KAFKA_MAX_POLL_INTERVAL_MS=600000 # 10 minutes

# Consumption mode and batch heartbeat
KAFKA_CONSUME_MODE=single
KAFKA_BATCH_HEARTBEAT=false

# Kafka client config
KAFKA_REQUEST_TIMEOUT_MS=30000

# Logging
LOG_LEVEL=debug

# Additional Kafka configuration
KAFKA_BATCH_SIZE=100
KAFKA_BUFFER_TIME=1000
KAFKA_RECONNECT=true
KAFKA_RESTART_ON_FAILURE=true
KAFKA_ENABLE_PARTITION_LOGGING=true
KAFKA_DISABLE_HEARTBEAT_LOG=false

# BullMQ concurrency control
KAFKA_WORKER_CONCURRENCY=3
KAFKA_MESSAGE_CONCURRENCY=20